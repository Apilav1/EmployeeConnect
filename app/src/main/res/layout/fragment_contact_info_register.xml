<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Activities.LoginActivity"
    android:background="@color/register_background_gray_color"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/register_background5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/github_username_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext_blue_borders"
        android:ems="10"
        android:hint="My github account name"
        android:inputType="text"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/linkenin_link_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext_blue_borders"
        android:ems="10"
        android:hint="My LinkenIn account url"
        android:inputType="text"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/github_username_register"
        app:layout_constraintStart_toStartOf="@+id/github_username_register"
        app:layout_constraintTop_toBottomOf="@+id/github_username_register" />

    <EditText
        android:id="@+id/skills_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext_blue_borders"
        android:ems="10"
        android:hint="My skills"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/linkenin_link_register"
        app:layout_constraintStart_toStartOf="@+id/linkenin_link_register"
        app:layout_constraintTop_toBottomOf="@+id/linkenin_link_register" />

    <Button
        android:id="@+id/back_button_contact_info_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Go back"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/skills_register"
        app:layout_constraintLeft_toLeftOf="@id/skills_register"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toLeftOf="@id/next_button_contact_info_register"
        android:layout_marginRight="16dp"
        />

    <Button
        android:id="@+id/next_button_contact_info_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/skills_register"
        app:layout_constraintRight_toRightOf="@id/skills_register"
        app:layout_constraintLeft_toRightOf="@id/back_button_contact_info_register"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>