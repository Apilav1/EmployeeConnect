<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:background="@color/register_background_gray_color"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/register_background5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/username_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edittext_blue_borders"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_button_register" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext_blue_borders"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="16dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_register"
        app:layout_constraintStart_toStartOf="@+id/email_register"
        app:layout_constraintTop_toBottomOf="@+id/email_register" />

    <EditText
        android:id="@+id/email_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_edittext_blue_borders"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="16dp"
        app:layout_constraintEnd_toEndOf="@+id/username_register"
        app:layout_constraintStart_toStartOf="@+id/username_register"
        app:layout_constraintTop_toBottomOf="@+id/username_register" />

    <Button
        android:id="@+id/photo_button_register"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle"
        android:text="Select Photo"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_button_basic_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Go back"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/password_register"
        app:layout_constraintLeft_toLeftOf="@id/password_register"
        android:layout_marginLeft="32dp"
        app:layout_constraintRight_toLeftOf="@id/next_button_basic_register"
        android:layout_marginRight="16dp"
        />

    <Button
        android:id="@+id/next_button_basic_register"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/password_register"
        app:layout_constraintRight_toRightOf="@id/password_register"
        app:layout_constraintLeft_toRightOf="@id/back_button_basic_register"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="16dp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/picture_user_profile_register"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:civ_border_width="5px"
        app:civ_border_color="@color/profileBackgroundColor"
        android:elevation="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/photo_button_register"
        app:layout_constraintEnd_toEndOf="@+id/photo_button_register"
        app:layout_constraintStart_toStartOf="@+id/photo_button_register"
        app:layout_constraintTop_toTopOf="@+id/photo_button_register" />


</androidx.constraintlayout.widget.ConstraintLayout>